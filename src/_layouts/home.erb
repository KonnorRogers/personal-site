---
layout: default
---

<main style="margin: 0 auto; --main-width: 100ch;">
  <div class="hero--mobile">
    <%= render "logo" %>
  </div>

  <h1 class="slogan">
    <%= site.metadata.slogan %>
  </h1>

  <p class="slogan">
    <%= site.metadata.description %>
  </p>

  <div style="margin-top: 4rem;"></div>

  <ul class="main-list">
    <% site.metadata.nav_links.reject { |i| i[:text] == "Home" }.each do |item| %>
      <li class="main-list__item">
        <a href="<%= item[:href] %>" class="main-list__link">
          <%= item[:text] %>
        </a>
      </li>
    <% end %>
  </ul>

</main>


