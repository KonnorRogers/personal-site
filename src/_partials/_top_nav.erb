<header class="nav-header" slot="header">
  <nav class="top-nav" aria-labelledby="top-nav-label">
    <sl-visually-hidden id="top-nav-label">
      Main Navigation
    </sl-visually-hidden>

    <sl-icon-button data-controller="side-nav" data-action="click->side-nav#open" class="top-nav__hamburger__button" name="list" label="Navigation"></sl-icon-button>

    <div class="top-nav__categories">
      <%= render "categories" %>
    </div>


    <div class="top-nav__search">
      <sl-icon-button
         class="top-nav__search__button"
         name="search"
         label="Search"
         data-action="click->search#show">
      </sl-icon-button>

      <sl-button
        class="top-nav__command-palette-button"
        data-action="click->search#show"
        style="min-width: 100px;"
        size="medium"
      >
        <sl-icon slot="prefix" name="search"></sl-icon>
        <span>Search...</span>
        <kbd slot="suffix" style="color: var(--sl-color-neutral-600); padding: 8px">
          Ctrl+K
        </kbd>
      </sl-button>
    </div>

    <div class="top-nav__links">
      <a target="_blank" rel="noreferrer noopener" aria-label="Link to GitHub" href="<%= site.metadata.github_url %>" class="nav-link nav-link--icon top-nav__github" no-external-icon>
        <sl-icon name="github"></sl-icon>
      </a>

      <a class="nav-link nav-link--icon top-nav__github" href="/feed.xml">
        <sl-icon name="rss"></sl-icon>
        <sl-visually-hidden>RSS Feed</sl-visually-hidden>
      </a>
      <%= render "theme_switcher" %>
    </div>

  </nav>
</header>
